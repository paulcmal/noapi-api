{% if tweet.retweet %}
<span class="context"><a href="{{ meta.url }}" class="author">{{ tweet.user.fullname }}</a> retweeted</span>
{% endif %}
<div class="tweet">
    <p class="header">
        <a href="{{ tweet.user.url }}">
            <img class="avatar" alt="" src="{{ tweet.user.avatar }}">
            <span class="fullname">{{ tweet.user.fullname }}</span> <span class="user">@{{ tweet.user.name }}</span>
        </a>
        <a class="date" title="fullDate" href="{{ tweet.url }}" style="float:right; ">{{ tweet.datetime | date('H:i - d/m/Y') }}</a>
    </p>
    <p class="content">{{ tweet.text.html|raw }}</p>
    <ul class="footer">
        <li class="rt">{{ tweet.stats.rt }}</li>
        <li class="fav">{{ tweet.stats.fav }}</li>
    </ul>
</div>
